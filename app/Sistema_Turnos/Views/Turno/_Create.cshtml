@model Sistema_Turnos.Models.TurnoViewModel

@{
    ViewData["Title"] = "tbTurnos".Substring(2);
    ViewData["ViewName"] = "_Create".Substring(1);
}
<div class="card-body">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="col-sm-6">
                <div class="form-group">
                    <label asp-for="Turn_Descripcion" class="control-label"></label>
                    <input asp-for="Turn_Descripcion" class="form-control" />
                    <span asp-validation-for="Turn_Descripcion" class="text-danger"></span>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    <label asp-for="Turn_HoraEntrada" class="control-label"></label>
                    <input asp-for="Turn_HoraEntrada" type="time" class="form-control" />
                    <span asp-validation-for="Turn_HoraEntrada" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6">
                <div class="form-group">
                    <label asp-for="Turn_HoraSalida" class="control-label"></label>
                    <input asp-for="Turn_HoraSalida" type="time" class="form-control" />
                    <span asp-validation-for="Turn_HoraSalida" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-4">
                <div class="form-group">
                    <input type="submit" value="Crear" class="btn btn-primary" />
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group">
                    <a asp-action="Index" class="btn btn-danger">Regresar</a>
                </div>
            </div>
        </div>
    </form>
    </div>

