@model Sistema_Turnos.Models.CargoViewModel

<div class="card-body">
    <form asp-action="@ViewData["ViewName"]">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="col-sm-11">
                <div class="form-group">
                    <label asp-for="Carg_Descripcion" class="control-label"></label>
                    <input asp-for="Carg_Descripcion" id="ciu" name="Carg_Descripcion" class="form-control" />
                    <span asp-validation-for="Carg_Descripcion" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-group" hidden>
            <label asp-for="Carg_Id" class="control-label"></label>
            <input asp-for="Carg_Id" id="iddd" name="Carg_Id" class="form-control" />
            <span asp-validation-for="Carg_Id" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-sm-4">
                <div class="form-group">
                    <input asp-controller="Cargo" asp-action="Edit" type="submit" value="Guardar" class="btn btn-primary" />
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group">
                    <a asp-action="Index" class="btn btn-dark">Regresar</a>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
