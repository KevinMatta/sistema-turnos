@model Sistema_Turnos.Models.MunicipioViewModel

<div class="card-body">
    <form asp-action="@ViewData["ViewName"]">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="col-sm-6">
                <div class="form-group">
                    <label asp-for="Ciud_Descripcion" class="control-label"></label>
                    <input asp-for="Ciud_Descripcion" id="ciu" name="descripcion" class="form-control" />
                    <span asp-validation-for="Ciud_Descripcion" class="text-danger"></span>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    <label asp-for="Esta_Id" class="control-label"></label>
                    <select asp-for="Esta_Id" id="departamento" name="departamento" style="background-color:#222a42;  " class="form-control" asp-items="ViewBag.Departamentos"></select>
                </div>
            </div>
        </div>
        <div class="form-group" hidden>
            <label asp-for="Ciud_Id" class="control-label"></label>
            <input asp-for="Ciud_Id" id="iddd" name="id" class="form-control" />
            <span asp-validation-for="Ciud_Id" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-sm-4">
                <div class="form-group">
                    <input asp-controller="Municipio" asp-action="Edit" type="submit" value="Guardar" class="btn btn-primary" />
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group">
                    <a asp-action="Index" class="btn btn-dark">Regresar</a>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
